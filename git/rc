#!/bin/bash
################################################################################
#
# git Bash RC File
#
# This file is intended to be the entry point for all things git and bash. 
#
################################################################################
#GITLIB="${HOMBASE}/git/lib" && test -f $GITLIB && source $GITLIB

include git/completion

if [ -f ~/.gitconfig ]; then

  echo "CHECK: ~/.gitconfig file"


else

  echo "ERROR: ~/.gitconfig file (not found)"

fi

export GIT_PS1_SHOWDIRTYSTATE=1
export GIT_PS1_SHOWSTASHSTATE=1
export GIT_PS1_SHOWUNTRACKEDFILES=1


