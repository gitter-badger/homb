#!/bin/bash
#################################################################################
# ~/.homb/bash/ps1
#
# This file contains the configuration information for the bash prompt.
#
#################################################################################

#################################################################################
# Defaults
#################################################################################

# Color Defaults
#--------------------------------------------------------------------------------

# Username Color
if [ -z "${COLOR_USER}" ]; then
  COLOR_USER="$(sizzle "" bold green)"
fi

# Super User Color (UID 0)
if [ -z "${COLOR_SU}" ]; then
  COLOR_SU="${BYellow}"
fi

# Path Color
if [ -z "${COLOR_PATH}" ]; then
  COLOR_PATH="${Green}"
fi

# Hostname Color
if [ -z "${COLOR_HOST}" ]; then
  COLOR_HOST="${BWhite}"
fi

# Pick the prompt based on the system
#------------------------------------------ -------------------------------------
PROMPT_BASIC='\u@\h \$ ' # Basic prompt for compatability

# TODO Refactor to reduce the amount of repeated WTF. 
# color(ColorName, "target_string") *shrug* 
PROMPT_USER='\[${COLOR_USER}\]\u\[${Reset}\]@\[${COLOR_HOST}\]\h\[${Color_Reset}\][\[${COLOR_PATH}\]\w\[${Color_Reset}\]]\n$(gitPS1)\$ \[${Color_Reset}\]'; 

# TODO Refactor to reduce WTF.
PROMPT_USER='\[${COLOR_SU}\]\u\[${Reset}\]@\[${COLOR_HOST}\]\h\[${Color_Reset}\][\[${COLOR_PATH}\]\w\[${Color_Reset}\]]\n$(gitPS1)\$ \[${Color_Reset}\]'; 

# Switch the prompt based on the (TODO terminal and) user we are using.
#-------------------------------------------------------------------------------
if [ $(interactive) ]; then

  # Load  prompt for the super user
  #---------------------------------------------------------------------------
  if [ "${UID}" == "0" ]; then
      
    PS1=$PROMPT_SU

  else

    PS1=$PROMPT_USER

  fi
      
else

  PS1=$PROMPT_BASIC

fi
